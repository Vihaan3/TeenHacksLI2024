---
import Button from "../ui/Button.astro";
import IconWithText from "../ui/IconWithText.astro";
---

<div class="flex w-full h-[90vh] p-14 justify-center space-x-14 font-display">
    <div class="bg-content-1 rounded-3xl w-[75%] relative">
        <div class="flex flex-col w-full px-16 pt-28 text-bg">
            <div class="flex flex-col w-[50%]">
                <h1 class="font-medium text-6xl">For Participants</h1>
                <p class="text-xl font-bold mt-6">
                    We are not accepting participants at the moment. Check back in September 2024 to see if this page
                    changes!
                </p>
            </div>
            <div class="absolute bottom-12 flex flex-col space-y-4">
                <IconWithText icon="/icons/location.svg">Location: Unknown</IconWithText>
                <IconWithText icon="/icons/team.svg">Teams: Up to four teamates</IconWithText>
                <IconWithText icon="/icons/star.svg">Theme: Talent Show</IconWithText>
                <Button text="APPLY TO JOIN NOW" href="/apply" style={"ACCENT1"} />
            </div>
        </div>
    </div>
    <div class="bg-accent-2 rounded-3xl w-[45%] hover:w-[120%] transition-all relative">
        <div class="flex flex-col w-full px-16 pt-28 text-bg">
            <div class="flex flex-col w-full">
                <h1 class="font-medium text-6xl">For Everyone Else</h1>
            </div>
            <div class="absolute bottom-12 flex flex-col space-y-4 w-[70%]">
                <h1 class="text-2xl font-bold">
                    We are not accpeting Mentors, Judges, or Comittee Members at the moment
                </h1>
                <div>
                    <Button text="APPLY TO JOIN NOW" href="/apply" style={"ACCENT3"} />
                </div>
            </div>
        </div>
    </div>
</div>
