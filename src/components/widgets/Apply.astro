---
import Button from "../ui/Button.astro";
import IconWithText from "../ui/IconWithText.astro";
import { Image } from 'astro:assets';
---

<div class="group/container flex w-full h-[90vh] m-14 px-14 justify-center gap-14 font-display">
    <div class="relative group/left bg-content-1 rounded-3xl flex-grow p-14 pr-0 flex flex-col justify-between text-bg">
        <div class="flex flex-col gap-4">
            <span class="font-medium h-20 text-6xl group-hover/container:text-5xl group-hover/left:text-6xl transition-all">For Participants</span>
            <span class="text-xl w-[545px] font-bold group-hover/container:opacity-0 group-hover/left:opacity-100 transition-all ease-linear">We are not accepting participants at the moment. Check back later to see if this page changes!</span>
        </div>

        <div class="flex flex-col gap-4">
            <IconWithText icon="/icons/location.svg">Location: Unknown</IconWithText>
            <IconWithText icon="/icons/team.svg">Teams: Up to four teammates</IconWithText>
            <IconWithText icon="/icons/star.svg">Theme: Talent Show</IconWithText>
            <div class="w-30">
                <Button text="APPLY TO JOIN NOW" href="/apply" style={"ACCENT1"} />
            </div>
        </div>
        <Image src="/images/glassesBernie.png" alt="Bernie with glasses" width="450" height="450" class:list={["absolute right-0 top-[20%] -scale-x-100 group-hover/container:opacity-0 group-hover/left:opacity-100 transition-all"]}/>
    </div>
    <div class="relative group/right bg-accent-2 rounded-3xl w-[35%] transition-all ease-linear hover:w-[70%] p-14 flex flex-col justify-between text-bg">
        <div class="flex flex-col gap-4">
            <span class="font-medium h-20 text-5xl group-hover/right:text-6xl transition-all">For Everyone Else</span>
            <span class="text-xl w-[545px] font-bold opacity-0 group-hover/right:opacity-100 transition-all ease-linear">We are not accepting Mentors, Judges, or Committee Members at the moment</span>
        </div>

        <div class="flex justify-end gap-4">
            <div class="w-30">
                <Button text="APPLY TO JOIN NOW" href="/apply" style={"ACCENT3"} />
            </div>
        </div>
        <Image src="/images/staffBernie.png" alt="Bernie with tie" width="450" height="450" class:list={["absolute right-0 top-[20%] opacity-0 group-hover/right:opacity-100 transition-all ease-linear"]}/>
    </div>
</div>
