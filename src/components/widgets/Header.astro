---
import ThemeSwitch from '../common/ThemeSwitch.astro';
import Navigation from '../common/Navigation';
import ThemedImage from '../ui/ThemedImage.astro';

interface Props {
    isSticky?: Boolean;
    showMenu?: Boolean;
    showDarkModeSwitch?: Boolean;
}
const { isSticky = true, showMenu = true, showDarkModeSwitch = true } = Astro.props;
---

<header
    class:list={[{ sticky: isSticky, relative: !isSticky }, 'top-0 z-30 flex p-6 justify-center items-center w-screen']}
>
    <ThemedImage
        darkModeUrl="/images/textLogoWhite.png"
        lightModeUrl="/images/textLogoBlack.png"
        className="h-[50%] absolute left-8"
    />
    <Navigation client:load />
    <ThemeSwitch transition:persist class:list={[{ hidden: !showDarkModeSwitch }]} />
</header>
