---
import Button from "../ui/Button.astro";
---

<div class="flex flex-col w-full h-screen space-y-14 px-14">
    <div class="flex flex-col w-[40%]">
        <p class="text-content-2 font-display font-medium text-xl">TeenHacks LI 2024</p>
        <h1 class="text-display text-6xl text-content-1 font-bold space-x-4 leading-tight">
            Long Island's Premier High School <span
                class="text-accent-1 hover:text-accent-2 transition-colors duration-500">Hackathon</span
            >
        </h1>
        <div class="flex mt-6 space-x-5">
            <Button href="/join" text="Join Now" />
            <Button href="/schedule" text="View Schedule" style={"BORDERED"} />
        </div>
    </div>
    <div class="w-full overflow-hidden rounded-3xl h-[600px] flex space-x-4 justify-center">
        <img src="https://teenhacks-media.s3.us-east-2.amazonaws.com/public/img/f19/f19(5).JPG" class="h-full relative rounded-3xl"/>
        <img src="https://teenhacks-media.s3.us-east-2.amazonaws.com/public/img/f19/f19(3).JPG" class="h-full relative rounded-3xl"/>
        <img src="https://teenhacks-media.s3.us-east-2.amazonaws.com/public/img/f19/f19(4).JPG" class="h-full relative rounded-3xl"/>
    </div>
</div>
