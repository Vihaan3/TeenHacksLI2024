---
import Layout from "./LandingLayout.astro";
import Image from "astro/components/Image.astro";
const{
    items = []
} = Astro.props
---

<Layout>
    {
        items && (
            <div class="w-screen h-fit p-14 mt-20 flex flex-col gap-14">
                {items.map(({title, author, tags, img}) => (
                    <section class="w-full flex justify-center">
                        <Image src={img} alt="Headshot" width="800" height="1280" class:list={"w-[60%] aspect-video rounded-md image-cover"}/>
                    </section>
                    <section class="w-full text-content-1 flex flex-col items-center gap-14">
                        <div class="w-2/3 flex flex-col justify-center gap-7">
                            <span class="text-3xl bold underline underline-offset-[14px]">{author}</span>
                            <span class="text-6xl">{title}</span>
                        </div>
                        <div class="w-2/3 flex flex-col justify-center text-4xl">
                            <slot/>
                        </div>
                    </section>
                ))}
            </div>
        )
    }
</Layout>

