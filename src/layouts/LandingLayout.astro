---
import Layout from './Layout.astro';
import Header from '../components/widgets/Header.astro';
import Footer from '../components/widgets/Footer.astro';
export interface Props {
    title?: String;
}

const { title } = Astro.props;
const Sticky = true;
const Menu = true;
---

<Layout title={title}>
    <Header client:load isSticky={Sticky} showMenu={Menu} class:list={'sticky top-0'} />
    <main class="absolute inset-0 bg-bg">
        <slot />
    </main>
    <Footer />
</Layout>
